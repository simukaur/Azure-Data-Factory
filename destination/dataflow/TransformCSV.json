{
	"name": "TransformCSV",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "dataflow_source",
						"type": "DatasetReference"
					},
					"name": "sourceCSV"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "dataflow_sink",
						"type": "DatasetReference"
					},
					"name": "sink"
				}
			],
			"transformations": [
				{
					"name": "select1"
				},
				{
					"name": "filterRows"
				},
				{
					"name": "split1"
				},
				{
					"name": "derivedColumn"
				},
				{
					"name": "aggregate"
				},
				{
					"name": "alterRows"
				}
			],
			"scriptLines": [
				"source(output(",
				"          transaction_id as short,",
				"          transactional_date as timestamp,",
				"          product_id as string,",
				"          customer_id as short,",
				"          payment as string,",
				"          credit_card as long,",
				"          loyalty_card as boolean,",
				"          cost as double,",
				"          quantity as short,",
				"          price as double",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> sourceCSV",
				"sourceCSV select(mapColumn(",
				"          transaction_id,",
				"          transactional_date,",
				"          product_id,",
				"          customer_id,",
				"          payment,",
				"          price",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select1",
				"select1 filter(customer_id!=12) ~> filterRows",
				"filterRows split(payment=='visa',",
				"     payment=='mastercard',",
				"     disjoint: false) ~> split1@(visa, mastercard, amex)",
				"split1@amex derive(payment = coalesce(payment,'N/A')) ~> derivedColumn",
				"split1@visa aggregate(groupBy(customer_id),",
				"     product_id = max(product_id)) ~> aggregate",
				"aggregate alterRow(insertIf(0==0)) ~> alterRows",
				"alterRows sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> sink"
			]
		}
	}
}